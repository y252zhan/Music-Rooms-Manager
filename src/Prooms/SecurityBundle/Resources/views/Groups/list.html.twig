{% extends '::base.html.twig' %}

{% block stylesheets %}
<style type="text/css">
    td{
        text-align: left;
    }
</style>
{% endblock %}

{% block title %}List User Groups{% endblock %}

{% block body %}
    <h1>List User Groups</h1>
    <div>
        {% if groups|length != 0 %}
            <table>
                <tr>
                    <th>Group</th>
                    <th>Action</th>
                </tr>
            {% for group in groups %}
                <tr>
                    <td>{{ group.role }}</td>
                    <td>
                        <a href="{{ path('prooms_groups_delete', {
                            'id' : group.id
                            }) }}"><button type='button'>Delete</button></a>
                    </td>
                </tr>
            {% endfor %}
            </table>
        {% endif %}
        <a href="{{ path('prooms_groups_add') }}"><button type='button'>Add</button></a>
    </div>
    
{% endblock %}
